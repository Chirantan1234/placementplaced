<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:animateLayoutChanges="false"
android:animationCache="false"
tools:context=".MainActivity">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/moving"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"

        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="41dp"
            android:layout_marginBottom="348dp"
            android:text="STUDENT"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/admin"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="12dp"
            android:text="TEACHER"
            android:textStyle="bold" />

        <Button
            android:id="@+id/student"
            android:layout_width="144dp"
            android:layout_height="156dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="373dp"
            android:background="@drawable/graduate"
            android:textAlignment="gravity" />

        <Button
            android:id="@+id/teacher"
            android:layout_width="144dp"
            android:layout_height="156dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="372dp"
            android:background="@drawable/teacher" />

        <Button
            android:id="@+id/admin"
            android:layout_width="144dp"
            android:layout_height="156dp"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="175dp"
            android:background="@drawable/administrator" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="534dp"
            android:background="#8000B8D4"
            android:fontFamily="casual"
            android:text="WELCOME TO THE PLACEMENT APP"
            android:textColor="#B3F50057"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/details"
            android:layout_width="144dp"
            android:layout_height="156dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="173dp"
            android:background="@drawable/details" />

        <TextView
            android:id="@+id/text"
            android:layout_width="343dp"
            android:layout_height="87dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="50dp"
            android:textColor="#C6FF00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/admin"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="-179dp"
            android:text="DETAILS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/admin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginBottom="-183dp"
            android:text="ADMIN"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>
